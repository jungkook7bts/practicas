import java.util.Scanner;

public class MenuArticulos {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int opcion = 0;

        while (opcion != 6) {
            System.out.println("\n----- Men√∫ de Art√≠culos -----");
            System.out.println("1. Crear un art√≠culo nuevo");
            System.out.println("2. Consultar un art√≠culo");
            System.out.println("3. Listar art√≠culos");
            System.out.println("4. Modificar un art√≠culo");
            System.out.println("5. Borrar un art√≠culo");
            System.out.println("6. Salir");
            System.out.print("Ingrese una opci√≥n: ");
            
            opcion = scanner.nextInt();
            
            switch (opcion) {
                case 1:
                    System.out.println("Opci√≥n Crear un art√≠culo nuevo seleccionada.");
                    break;
                case 2:
                    System.out.println("Opci√≥n Consultar un art√≠culo seleccionada.");
                    break;
                case 3:
                    System.out.println("Opci√≥n Listar art√≠culos seleccionada.");
                    break;
                case 4:
                    System.out.println("Opci√≥n Modificar un art√≠culo seleccionada.");
                    break;
                case 5:
                    System.out.println("Opci√≥n Borrar un art√≠culo seleccionada.");
                    break;
                case 6:
                    System.out.println("Programa finalizado.");
                    break;
                default:
                    System.out.println("Opci√≥n inv√°lida. Intente nuevamente.");
            }
        }

        scanner.close();
    }
}
