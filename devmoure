import java.util.*;  //** IMPORTA TODO 

public class Main {
    public static void main(String[] args) {
       //** Crear un objeto (una persona)
       //** Persona ‚Üí es la clase (como el molde).
       //**üîπ abi ‚Üí es una variable de tipo Persona.
       //**üîπ new Persona() ‚Üí es lo que crea un nuevo objeto (una nueva "persona").
        Persona abi = new Persona("abi", 20);
        //*** Usar el m√©todo de la clase
        abi.saludar();
        //------------
        book steve = new book("Steve Jobs", "Apple sheap");
        steve.datos();
        //------------ 
        Dog jason = new Dog("jason");
        jason.bark();
        //------------
        car toyota = new car("toyota", "1890");
        toyota.showData();
        //-------------
        student jeremy = new student(75);
        System.out.println(jeremy.exam());
        //------------- 
        BankAccount liza = new BankAccount(400, 1500.12);
        System.out.println(liza.deposit());
        //--------------- 
        vaso miVaso = new vaso("limonada"); 
        System.out.println(miVaso.vacio); //sin metodo
        miVaso.contenido(); //con metodo para mostrar 
        //---------------
        cuentaBanco jenni = new cuentaBanco(1000.00); //dinero que ya tenia
        cuentaBanco jisoo = new cuentaBanco(200.00); //segundo objeto
        jenni.deposito(890.00);
        jenni.saldoFinal();
        jenni.retirarDinero(890);
        jenni.saldoFinal();
        jenni.transferirA(jisoo, 600);
        jenni.saldoFinal(); //total 
        //------------ 
        Rectangle miFigura = new Rectangle(5.0, 4.0); 
        System.out.println("area: " + miFigura.calcularArea());
        System.out.println("perimetro: " + miFigura.calcularPerimetro());
        //------------- 
        worker rose = new worker("rose", 23000.00);
        rose.workSalary();
        //--------------- 
           //**creo un ArrayList que guardara los objetos de la clase 
        ArrayList<person> contactos = new ArrayList<>();
          //**creamos objetos person para ArrayList
        person contac1 = new person("navy", 1122333);
        person contac2 = new person("ally", 2233322);
        person contac3 = new person("bella", 112244);
          //**lo agregamos/guardamos los objetos dentrodel ArrayList
          //**es decir guardamos instancias de la clase person u objetos creados
        contactos.add(contac1);
        contactos.add(contac2);
        contactos.add(contac3);
        //**mostramos la info de cada persona
        for (person cont : contactos) {
          cont.listaContactos(); 
        }
        //----------------  
           //**zapatillas es un objeto que creamos
        product zapatillas = new product("zapatillas", 4500);
        zapatillas.descuento(30); //**aplica el 30% de descuento
        zapatillas.showValor();
