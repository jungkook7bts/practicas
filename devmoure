        int mayor;
        String nombre = "";
        var a = 24;
        var b = 56;
        var c = 34;
        if (a >= b && a >= c) {
          mayor = a;
          nombre = "a ";
        } else if ( b >= a && b >= c) {
          mayor = b;
          nombre = "b ";
        } else {
          mayor = c;
          nombre = "c ";
        }
        
        System.out.println("el mayor es " + nombre + mayor)
