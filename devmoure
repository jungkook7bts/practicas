            }
        // 2. Declara dos n√∫meros y muestra cu√°l es mayor, o si son iguales.
        int number1 = 26;
        int number2 = 26;
        if (number1 > number2){
          System.out.println("numero 1 es mayor o igual a  numero 2");
        } else if(number2 > number1) {
          System.out.println("numero 2 es mayor o igual a numero 1");
        } else {
          System.out.println("ambos numeros son iguales");
        }
        
        // 3. Dado un n√∫mero, verifica si es positivo, negativo o cero.
        int n1 = -12;
        if(Math.signum(n1) >  0) {
          System.out.println("es un numero positivo");
        } else if (Math.signum(n1) < 0) {
          System.out.println("es un numero negativo");
        } else {
          System.out.println("el numero es cero");
        }

        if (n1 > 0) {
          System.out.println("es positivo");
        } else if (n1 < 0) {
          System.out.println("es negativo");
        } else {
          System.out.println("es cero");
        }
        
        // 4. Crea un programa que diga si un n√∫mero es par o impar.
        int num2 = 8;
        if(num2 % 2 == 0) {
          System.out.println("el numero es par");
        } else {
          System.out.println("el numero es impar");
        }
        
        // 5. Verifica si un n√∫mero est√° en el rango de 1 a 100.
        int num3 = 100;
        int rangoInicial = 1;
        int rangoFinal = 100;
        if (num3 >= rangoInicial && num3 <= rangoFinal) {
          System.out.println("el numero esta dentro del rango de " + rangoInicial + " y " + rangoFinal );
        } else {
          System.out.println("no esta deltro del rango");
        }
        
        // 6. Declara una variable con el d√≠a de la semana (1-7) y muestra su nombre con switch.
        int dia = 3;
        switch(dia) {
          case 1:
            System.out.println("lunes");
            break;
          case 2:
            System.out.println("martes");
            break;
          case 3: 
            System.out.println("miercoles");
            break;
          case 4:
            System.out.println("jueves");
            break;
