  //--------------
        // 8. Account tiene un saldo y m√©todos para deposit() y withdraw(). SavingsAccount hereda y agrega un m√©todo addInterest().
        class Account {
          double saldo;
          
          public Account(double ingreso) {
            this.saldo = ingreso; //**el primer ingreso dentro que yo ponga
          }
          
          public void deposit(double cantidad) {
              saldo += cantidad;
              System.out.println("depositaste: " + cantidad + " saldo total: " + saldo);
          }
          
          public void withdraw(double cantidad) {
            if(saldo > 0 && cantidad <= saldo) {
              saldo -= cantidad;
              System.out.println("withdraw: " + cantidad + " saldo actual: " + saldo);
            } else {
              System.out.println("sin saldo suficiente");
            }
          }
          
        }
//----------------
  class SavingsAccount extends Account {
      double interest;
      
      public SavingsAccount(double ingreso, double interest){
        super(ingreso);
        this.interest = interest;
      }
      
      public void addInterest(){
        double interesGanado = saldo * interest;
        saldo += interesGanado;
        System.out.println("interes ganado: " + interesGanado + " saldo actual: " + saldo);
      }
      
    }
