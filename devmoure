      //operadores
      // 1. Crea una variable con el resultado de cada operaci√≥n aritm√©tica.
      int h = 14;
      int k = 28;
      int suma = h + k;
      int resta = h - k;
      int multi = h * k;
      double division = h / k;
      double restoModulo = h % k;
      double exponentePotencia = Math.pow(h, k);
      
      System.out.println("Suma: " + suma);
        System.out.println("Resta: " + resta);
        System.out.println("Multiplicaci√≥n: " + multi);
        System.out.println("Divisi√≥n: " + division);
        System.out.println("M√≥dulo: " + restoModulo);
        System.out.println("Potencia: " + exponentePotencia);
      
      // 2. Crea una variable para cada tipo de operaci√≥n de asignaci√≥n.
      int j = 36;
      int sum = 35;
       sum += j;
       int rest = 35;
      rest -= j;
      int multip = 35;
      multip *= j;
      double div = 24;
      div /= j;
      int resto= 2;
      resto %= j;
      double poten = 3;
      poten = Math.pow(poten, j);
      System.out.println("+= : " + sum);
        System.out.println("-= : " + rest);
        System.out.println("*= : " + multip);
        System.out.println("/= : " + div);
        System.out.println("%= : " + resto);
        System.out.println("**= (Math.pow): " + poten);

// 3. Imprime 3 comparaciones verdaderas con diferentes operadores de comparaci√≥n.
      var a = 5;
      var b = 7;
      System.out.println(a < b);
      System.out.println(a <= b);
      System.out.println(a != b);
      
     // 4. Imprime 3 comparaciones falsas con diferentes operadores de comparaci√≥n.
     System.out.println(a > b);
     System.out.println(a == b);
     System.out.println(a >= b);
     
        
     // 5. Utiliza el operador l√≥gico and.
     System.out.println(true && false);
     System.out.println(true && true);
        
     // 6. Utiliza el operador l√≥gico or.
     System.out.println(true || false);
     System.out.println(false || false);
     System.out.println(true || true);
        
   // 7. Combina ambos operadores l√≥gicos.
   System.out.println(6 < 4 || 5 >= 3 && 7 != 5);
        
    // 8. A√±ade alguna negaci√≥n.
    System.out.println(!true);
    System.out.println(!(5>=3));
    System.out.println(!(3 > 5));
        
