  class Book extends Product{
    public Book(String product, double price){
      super(product, price);
    }
    @Override
    public void getPrice(double porcentage){
      var discount = price *(porcentage/100);
      var priceFinal = price - discount;
      System.out.println("producto: " + product + ", precio con descuento: " + priceFinal);
    }
  }
  class Electronic extends Product{
     public Electronic(String product, double price){
      super(product, price);
    }
    @Override
    public void getPrice(double porcentage){
      var discount = price *(porcentage/100);
      var priceFinal = price - discount;
      System.out.println("producto: " + product + ", precio con descuento: " + priceFinal);
    }
    }
  
