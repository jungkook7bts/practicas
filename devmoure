//IMPRIME EL ABECEDARIO EL "A" TO "Z" :
 for(char i='a'; i <='z'; i++){
         System.out.println(i);
       }
//imprime sin las vocales (empieza en b)
 for (char i = 'a'; i <= 'z'; i++) {
          if ("aeiou".indexOf(i) == -1) {
          System.out.println(i);
          }
      }
