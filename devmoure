    System.out.println(++c);
    System.out.println(+c);
    System.out.println(--c);
    System.out.println(++c);
        
   // 10. Combina operadores aritm√©ticos, de comparaci√≥n y l√≥gicos.
   System.out.println(5 * 6 < 8 + 4 || 4 + 4 == 4 + 4);
   System.out.println(8 - 5 == 3 || !(4 + 7 > 20) && 6 * 6 < 7 * 7);

